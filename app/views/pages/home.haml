= image_tag("slashathon-blog.jpg")

.btn.btn-danger
  %a.twitter.popup{href: "http://twitter.com/share?text=Slashify yourself #{request.original_url}"} Tweet it

.pure-g-r.grid


:javascript
  $('.popup').click(function(event) {
    var width  = 575,
        height = 400,
        left   = ($(window).width()  - width)  / 2,
        top    = ($(window).height() - height) / 2,
        url    = this.href,
        opts   = 'status=1' +
                 ',width='  + width  +
                 ',height=' + height +
                 ',top='    + top    +
                 ',left='   + left;
    
    window.open(url, 'twitter', opts);
 
    return false;
  });